<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="#f1eef5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="5dip" >
        <Button
            android:id="@+id/setting_stu"
            android:layout_marginLeft="235dip"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:scaleType="centerCrop"
            android:background="#171a1f"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="0dip" >
         <Button
            android:id="@+id/coursetablemanage"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="课表管理"
            android:background="#d76735">
            </Button>
        <Button 
            android:id="@+id/coursesignin"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="课程签到"
            android:background="#7a82c3"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="0dip" >
        <Button
            android:id="@+id/homeworkmanage_stu"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="作业管理"
            android:background="#159caf">
            </Button>
        <Button
            android:id="@+id/resourceshare_stu"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="资源共享"
            android:background="#d43d72">
            </Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="0dip" >
        <Button
            android:id="@+id/notice_stu"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="短信发送"
            android:background="#28a152">
            </Button>
        <Button
            android:id="@+id/msgwindow_stu"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="消息窗口"
            android:background="#c6b736">
            </Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="0dip" >
        <Button
            android:id="@+id/courseevaluate_stu"
            android:layout_width="135dip"
            android:layout_height="90dip"
            android:layout_margin="2.5dip"
            android:scaleType="centerCrop"
            android:text="课程评分"
            android:background="#927f9d">
            </Button>
    </LinearLayout>
</LinearLayout>
