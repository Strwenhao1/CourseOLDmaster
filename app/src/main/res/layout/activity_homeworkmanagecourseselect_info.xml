<LinearLayout
	      android:id="@+id/l111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    
      <Button
          android:background="@drawable/selectable_item_background"
            android:id="@+id/homeworkmanagecourseselect_info__upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上传" 
            android:textColor="#FFFFFF"
            android:onClick="ButtonOnclick_homeworkmanagecourseselect_info__upload"
            android:textSize="23sp"/>
    
         <Button
            
            android:background="@drawable/selectable_item_background"
            android:id="@+id/homeworkmanagecourseselect_info__down"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="下载" 
             android:textColor="#FFFFFF"
             android:textSize="23sp"
              android:onClick="ButtonOnclick_homeworkmanagecourseselect_info__down"/>

        <Button
            
            android:background="@drawable/selectable_item_background"
            android:id="@+id/homeworkmanagecourseselect_info__check"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看" 
             android:textColor="#FFFFFF"
              android:textSize="23sp"
              />


</LinearLayout>
  

  

