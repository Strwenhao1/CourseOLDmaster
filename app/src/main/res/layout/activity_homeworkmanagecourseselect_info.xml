<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/title_bg"
    android:orientation="horizontal" 
    android:id="@+id/relativelayout_hmmcs">

    <Button
        android:id="@+id/homeworkmanagecourseselect_info__back"
        style="@style/Text.Title_Button"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/title_btn_back"
        android:minWidth="60dip"
        android:text="返回" />

    <TextView
        android:id="@+id/homeworkmanagecourseselect_info__textview"
        style="@style/Text.Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" 
        android:text="课程信息"/>
 
    <Button
       
        style="@style/Text.Title_Button"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:minWidth="70dip" />

</LinearLayout>

<ListView android:id="@+id/homeworkmanagecourseinfoListview"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_below="@id/relativelayout_hmmcs"
		
		/>


