<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f1eef5"
    android:orientation="vertical"
    tools:context=".view.activity.CourseInfoActivity" >

    <!--<include layout="@layout/top_function"/>
    -->

	<com.coursemis.view.myView.TitleView
		android:id="@+id/course_info_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"></com.coursemis.view.myView.TitleView>

    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/table_shape"
        android:layout_marginTop="20dp"
        android:layout_margin="15dip" >
        <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/table_shape"
        android:layout_marginTop="10dp"
        android:padding="10dip">
        	<ImageView 
        	    android:src="@drawable/icon_course_name"
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="left"
        	    />
            <TextView
	            android:id="@+id/name_course"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#00ff00"
	            android:shadowColor="#0000ff"
	            android:textSize="18sp"
	            android:layout_gravity="left"
	            android:background="@drawable/table_shape"
	            android:text="" >
        	</TextView>
        </LinearLayout>
        <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/table_shape"
        android:layout_marginTop="10dp"
        android:padding="10dip">
        	<ImageView 
        	    android:src="@drawable/icon_course_week"
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="left"
        	    />
            <TextView
	            android:id="@+id/weeknum_course"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#00ff00"
	            android:shadowColor="#0000ff"
	            android:textSize="18sp"
	            android:layout_gravity="left"
	            android:background="@drawable/table_shape"
	            android:text="" >
        	</TextView>
        </LinearLayout>
        <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/table_shape"
        android:layout_marginTop="10dp"
        android:padding="10dip">
        	<ImageView 
        	    android:src="@drawable/icon_course_time"
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="left"
        	    />
            <TextView
	            android:id="@+id/daytime_course"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#00ff00"
	            android:shadowColor="#0000ff"
	            android:textSize="18sp"
	            android:layout_gravity="left"
	            android:background="@drawable/table_shape"
	            android:text="" >
        	</TextView>
        </LinearLayout>
        <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/table_shape"
        android:layout_marginTop="10dp"
        android:padding="10dip">
        	<ImageView 
        	    android:src="@drawable/icon_course_address"
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="left"
        	    />
            <TextView
	            android:id="@+id/address_course"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#00ff00"
	            android:shadowColor="#0000ff"
	            android:textSize="18sp"
	            android:layout_gravity="left"
	            android:background="@drawable/table_shape"
	            android:text="" >
        	</TextView>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
