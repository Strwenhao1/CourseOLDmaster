 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/title_bg"
    android:orientation="horizontal" 
    android:id="@+id/relativelayout_ua">

    <Button
        android:id="@+id/studentcheckclasshomeworkinfo__back"
        style="@style/Text.Title_Button"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/title_btn_back"
        android:minWidth="60dip"
        android:text="返回"
        android:onClick="buttonOnclick_studentcheckclasshomeworkinfo__back"
         />

    <TextView
        android:id="@+id/studentcheckclasshomeworkinfo__textview"
        style="@style/Text.Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" 
        android:text="作业情况"/>
 
    <Button
       
        style="@style/Text.Title_Button"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:minWidth="70dip" />

</LinearLayout>


  <ListView android:id="@+id/studentcheckclasshomeworkinfo_listview"
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"/>  
  

</LinearLayout>