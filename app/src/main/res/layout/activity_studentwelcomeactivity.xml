<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" 
    android:background="@drawable/main"
	android:weightSum="3"
	>
   
<LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:padding="10dip" 
        android:layout_marginTop="70dip">
        
        <Button 
            android:id="@+id/s_signIn"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="学生签到"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            android:background="@drawable/main_bg_s"
            />
        <Button
            android:id="@+id/signin"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="资源共享"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            android:layout_marginLeft="20dip"
            android:background="@drawable/main_bg_s"
android:onClick="ButtonOnclick_ShareMedia"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="10dip" >
        <Button
            android:id="@+id/coursetablemanage"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="课表管理"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            android:background="@drawable/main_bg_s">
            </Button>
        <Button
            android:id="@+id/courseevaluate_stu"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="课程评分"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            android:layout_marginLeft="20dip"
            android:background="@drawable/main_bg_s"
           >
            </Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="10dip" >
        <Button
            android:id="@+id/student_checkhomework"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="作业管理"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
           android:background="@drawable/main_bg_s">
            </Button>
            <Button
        android:id="@+id/classhomework"
        android:layout_width="100dip"
        android:layout_height="65dip"
        android:scaleType="centerCrop"
        android:text="班级作业" 
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
        android:layout_marginLeft="20dip"
        android:background="@drawable/main_bg_s"
android:onClick="ButtonOnclick_classhomework"/>
        <!-- <Button
            android:id="@+id/msgwindow"
            android:layout_width="140dip"
            android:layout_height="95dip"
            android:scaleType="centerCrop"
            android:text="消息窗口"
            android:background="@drawable/f">
            </Button> -->
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:orientation="horizontal"
        android:padding="10dip" 
        android:layout_marginBottom="0dip">
        <Button
            android:id="@+id/student_checkSign"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:text="到课情况"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            
            android:background="@drawable/main_bg_s">
            </Button>
        <Button
            android:id="@+id/student_where"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dip"
            android:text="我在哪里"
            android:textColor="#E8F2FE"
            android:textSize="18sp" 
            android:background="@drawable/main_bg_s"
android:onClick="button1_Click">
            </Button>
    </LinearLayout>
			<RelativeLayout 
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    
       	    >
     	    <RelativeLayout
     	    	android:layout_width="fill_parent"
       	    	android:layout_height="wrap_content"
       	    	android:orientation="vertical"
     	        android:layout_alignParentBottom="true"
     	     	android:layout_alignParentRight="true"
     	      >


			</RelativeLayout>

				<Button
					android:id="@+id/startStudentLoc"
					android:layout_width="65dp"
					android:layout_height="50dp"

					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginEnd="21dp"
					android:layout_marginRight="21dp"
					android:background="@drawable/location"
					android:gravity="bottom"
					android:text="开始" />
			</RelativeLayout>
    
    <TextView
        android:id="@+id/student_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
