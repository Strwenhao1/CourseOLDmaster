<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.coursemis.view.myView.SelectItemView
        android:id="@+id/starLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/select"
        app:signInClassName="开启定位"
        app:signInResultName="未定位" />

    <com.coursemis.view.myView.SelectItemView
        android:id="@+id/courseWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select"
        android:text="课程周数"
        app:signInClassName="课程周数"
        app:signInResultName="未选择" />

    <com.coursemis.view.myView.SelectItemView
        android:id="@+id/courseTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select"
        android:text="课程时间"
        app:signInClassName="课程时间"
        app:signInResultName="未选择" />

    <com.coursemis.view.myView.SelectItemView
        android:id="@+id/signInLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select"
        android:text="签到时间限制"
        app:signInClassName="签到时间限制"
        app:signInResultName="未选择" />

    <Button
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:padding="10dp"
        android:text="开启"
        android:textSize="20sp" />
</LinearLayout>